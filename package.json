  "scripts": {
    "ng": "ng",
    "firebase": "firebase",
    "start": "ng serve",
    "build": "ng build && firebase deploy --project develop",
    "build:prod": "ng build --prod && firebase deploy --project default",
    "build:en": "ng build --output-path dist/en --base-href en --locale en --i18n-format xlf --i18n-file src/locale/messages.en.xlf",
    "build:pt-BR": "ng build --output-path dist/pt-BR --base-href pt-BR --locale pt-BR --i18n-format xlf --i18n-file src/locale/messages.pt-BR.xlf",
    "build:de": "ng build --output-path dist/de --base-href de --locale de --i18n-format xlf --i18n-file src/locale/messages.de.xlf",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "i18n": "ng-xi18n --i18nFormat=xlf"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.0.2",
    "@angular/common": "^5.0.2",
