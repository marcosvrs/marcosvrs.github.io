        "**/node_modules/[^b]*": true,
        "**/node_modules/?[^o]*": true,
        "**/node_modules/??[^o]*": true,
        "**/node_modules/???[^t]*": true,
        "**/node_modules/????[^s]*": true,
        "**/node_modules/?????[^t]*": true,
        "**/node_modules/??????[^r]*": true,
        "**/node_modules/???????[^a]*": true,
        "**/node_modules/????????[^p]*": true,
        "**/node_modules/**/*.min*": true,
        "**/node_modules/**/*.map": true
    }
}